{%extends "::dashboardBase.html.twig"%}

{% block stylesheets %}
    {{parent()}}
{% endblock %}

{%block content%}
    <h3 class="page-title">
        Panel de control
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="{{path("admin_dashboard")}}">Panel de control</a>
                <i class="fa fa-angle-right"></i>

            </li>
            <li>
                <a href="{{path("admin_country")}}">Gestionar Países</a>
            </li>

        </ul>

    </div>

    <div class="row">

        <div class="col-md-12">

            <div class="portlet box blue-madison">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-globe"></i>Gestionar Países

                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="reload">
                        </a>
                        <a href="javascript:;" class="remove">
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-9">
                                <button data-toggle="modal" id="ajax-demo" class=" btn green">
                                    Nuevo <i class="fa fa-plus"></i></button>
                                <button data-toggle="modal" id="ajax-demo" class=" btn blue" >
                                    Editar <i class="fa fa-pencil"></i></button>
                                <button data-toggle="modal" id="ajax-demo" class=" btn red">
                                    Eliminar <i class="fa fa-trash-o"></i></button>

                            </div>
                            <div class="col-md-6">

                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover" id="sample_1">
                        <thead>
                            <tr>
                                <th style="width: 5%">
                                    Secuencial Autom&aacute;tico
                                </th>
                                <th>
                                    Nombre
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            {%for entity in entities%}

                                <tr>
                                    <td>
                                        {{entity.id}}
                                    </td>
                                    <td>
                                        {{entity.name}}
                                    </td>

                                </tr>

                            {%endfor%}


                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
    <div id="ajax-modal" class="modal fade" tabindex="-1">
    </div>
{%endblock%}


{%block base_script%}
    {{parent()}}
{%endblock%}
{%block inline_script%}

    {{parent()}}
