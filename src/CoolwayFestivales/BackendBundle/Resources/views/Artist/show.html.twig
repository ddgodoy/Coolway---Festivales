<table class="table table-striped">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Descripci√≥n</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Spotify</th>
            <td>{{ entity.idSpotify }}</td>
        </tr>
        <tr>
            <th>Website</th>
            <td>{{ entity.website }}</td>
        </tr>
        <tr>
            <th>Twitter</th>
            <td>{{ entity.twitter }}</td>
        </tr>
        <tr>
            <th>Facebook</th>
            <td>{{ entity.facebook }}</td>
        </tr>
        <tr>
            <th>Instagram</th>
            <td>{{ entity.instagram }}</td>
        </tr>
        {% if entity.path %}
        <tr>
            <td colspan="2" style="text-align:center;">
                <img src="{{asset('uploads/artists/')}}{{ entity.id }}/400/{{ entity.path }}" alt="{{entity.name}}" title="{{entity.name}}"/>
            </td>
        </tr>
        {% endif %}
    </tbody>
</table>