                    <h3 class="page-title">Dashboard <small>dashboard & statistics</small></h3>
                    
                    <div class="page-bar">
                        <ul class="page-breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="#l">Home</a>
                                <i class="fa fa-angle-right"></i>
                            </li>
                            <li>
                                <a href="#">Dashboard</a>
                            </li>
                        </ul>
                        <div class="page-toolbar"></div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            {% block body %}{% endblock %}
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="page-footer">
            <div class="page-footer-inner">{{ 'now'|date('Y') }} &copy; Coolway Festivales.</div>
            <div class="scroll-to-top"><i class="icon-arrow-up"></i></div>
        </div>
        
        {% block javascripts %}
            {% javascripts
                '@AppBundle/Resources/public/global/plugins/jquery-1.11.0.min.js'
                '@AppBundle/Resources/public/global/plugins/jquery-migrate-1.2.1.min.js'
                '@AppBundle/Resources/public/global/plugins/jquery-ui/jquery-ui-1.10.3.custom.min.js'
                '@AppBundle/Resources/public/global/plugins/bootstrap/js/bootstrap.min.js'
                '@AppBundle/Resources/public/global/plugins/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js'
                '@AppBundle/Resources/public/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js'
                '@AppBundle/Resources/public/global/plugins/jquery.blockui.min.js'
                '@AppBundle/Resources/public/global/plugins/jquery.cokie.min.js'
                '@AppBundle/Resources/public/global/plugins/uniform/jquery.uniform.min.js'
                '@AppBundle/Resources/public/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js'
                '@AppBundle/Resources/public/global/scripts/metronic.js'
                '@AppBundle/Resources/public/admin/layout/scripts/layout.js'
                '@AppBundle/Resources/public/admin/layout/scripts/quick-sidebar.js'
                '@AppBundle/Resources/public/admin/layout/scripts/demo.js' output='js/backend.js' %}
